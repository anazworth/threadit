{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Threadit - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8000,
  "endpoints": [
    {
      "endpoint": "/api/v1/user",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/user",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://auth-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/api/v1/user/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/user/login",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://auth-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_headers": [
        "*"
      ]
    },
    {
      "endpoint": "/api/v1/user/verify",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/user/verify",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://auth-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_headers": [
        "Cookie",
        "*"
      ]
    },
    {
      "endpoint": "/api/v1/user/logout",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/user/logout",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://auth-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_headers": [
        "Cookie",
        "*"
      ]
    },
    {
      "endpoint": "/api/v1/user/sessions/{username}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/user/sessions/{username}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://auth-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/api/v1/user/sessions/{sessionid}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/sessions/{sessionid}",
          "encoding": "json",
          "sd": "static",
          "method": "DELETE",
          "host": [
            "http://auth-service:8080"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ],
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h",
      "allow_methods": [
        "GET",
        "HEAD",
        "POST"
      ]
    }
  }
}